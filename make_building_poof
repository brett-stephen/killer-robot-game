INCLUDE = -I/usr/X11R6/include/
LIBDIR  = -L/usr/X11R6/lib

COMPILERFLAGS = -Wall
CC = gcc
CFLAGS = $(COMPILERFLAGS) $(INCLUDE)
LIBRARIES = -lX11 -lXi -lXmu -lglut -lGL -lGLU -lm

All: building_poof

building_poof: building_poof.o building_poof.c
	$(CC) $(CFLAGS) draw_robot.c -o $@ $(LIBDIR) $< $(LIBRARIES)
